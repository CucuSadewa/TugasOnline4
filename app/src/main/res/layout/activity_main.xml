<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_jangkar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_centerInParent="true"/>
    <EditText
        android:id="@+id/edt_usename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_jangkar"
        android:hint="Username"
        android:inputType="textAutoComplete"/>
    <EditText
        android:id="@+id/edt_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_jangkar"
        android:hint="Password"
        android:inputType="numberPassword"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_pwd"
        android:layout_alignParentRight="true"
        android:text="Login"
        android:onClick="masuk"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:layout_above="@id/edt_usename"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/titik_koma"
        android:scaleType="fitXY"
        android:layout_marginBottom="24dp"/>

</RelativeLayout>