<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SoalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_soal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Manakah kota dibawah ini yang merupakan ibu kota provinsi?"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_bandung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Bandung" />

            <CheckBox
                android:id="@+id/cb_bogor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Bogor" />

            <CheckBox
                android:id="@+id/cb_banjarmasin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Banjarmasin" />

            <CheckBox
                android:id="@+id/cb_bontang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingLeft="10dp"
                android:text="Bontang" />

            <Button
                android:id="@+id/btn_periksa_nilai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="hasil"
                android:text="Periksa Nilai" />

            <TextView
                android:id="@+id/tv_hasil_nilai1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nilai Anda :"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_soal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="2. Sebutkan ibu kota provinsi Sulawesi Tenggara?"
            android:textSize="20sp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="30dp">

            <RadioButton
                android:id="@+id/rb_samarinda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Samarinda"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_kendari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kendari"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_palu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palu"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_makasar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makasar"
                android:textSize="15sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_periksa_nilai2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:onClick="hasil"
            android:text="Periksa Nilai" />

        <TextView
            android:id="@+id/tv_hasil_nilai2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Nilai Anda :"
            android:textSize="20sp" />
        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:onClick="hasil"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</ScrollView>